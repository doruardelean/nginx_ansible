# HTTP server for Certbot validation
server {
    listen 80;
    server_name potzotech.site;

    location / {
        return 200 "Temporary HTTP server for Certbot validation";
    }

    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }
}